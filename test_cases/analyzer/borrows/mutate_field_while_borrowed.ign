// Test: Field assignment on a borrowed record should produce A0047

record Point {
    public x: i32;
    public y: i32;
}

function main(): void {
    let mut p: Point = Point { x: 1, y: 2 };
    let r: &Point = &p;         // Borrow p immutably
    p.x = 10;                   // Error: cannot assign to 'p' because it is borrowed
    return;
}

// Test: Assigning through dereference while the root variable is borrowed
// The borrow checker traces *ptr back to ptr as the root variable.

function mutate(x: &mut i32): void {
    *x = *x + 1;
    return;
}

function main(): void {
    let mut value: i32 = 10;
    let r: &i32 = &value;      // Borrow value immutably
    mutate(&mut value);        // Error: cannot borrow 'value' as mutable while borrowed immutably
    return;
}

// Test: Record containing another record with only primitive fields is structurally Copy
// Expected: no errors, variable can be used after assignment

record Vec2 {
  public x: i32;
  public y: i32;
}

record Rect {
  public origin: Vec2;
  public size: Vec2;
}

function main(): i32 {
  let r: Rect = Rect {
    origin: Vec2 { x: 0, y: 0 },
    size: Vec2 { x: 10, y: 20 }
  };
  let r2: Rect = r;
  return r.size.y + r2.origin.x;
}

// Test: Extern call followed by Ignis call
// Expected: ERROR O0001 - use after move on third call

@implements(Drop)
record Owned {
    public id: i32;
    drop(&mut self): void { return; }
}

extern io {
    function print(s: Owned): void;
}

function consume(s: Owned): void {
    return;
}

function main(): void {
    let a: Owned = Owned { id: 1 };

    // Extern call - doesn't consume, a still valid
    io::print(a);

    // Ignis call - consumes, a is now moved
    consume(a);

    // This should error - a was moved
    io::print(a);

    return;
}
